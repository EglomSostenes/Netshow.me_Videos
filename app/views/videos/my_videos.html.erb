<p id="notice"><%= notice %></p>

<h1><%=t("my_videos")%></h1> <br>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th><%=@videos.human_attribute_name("name")%></th>
      <th><%=@videos.human_attribute_name("url")%></th>
      <th><%=@videos.human_attribute_name("score")%></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= link_to video.name, video %></td>
        <td><%= video.url %></td>
        <td><%= video.score %></td>
        <td><%= link_to '', edit_video_path(video), class: 'btn btn-outline-primary fas fa-edit fa-sm', title: t('actions.edit') %></td>
        <td><%= link_to '', video, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-outline-danger fas fa-trash-alt fa-sm', title: t('actions.destroy') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @videos %> <br>
<%= page_entries_info @videos %>
<br><br>
<%= link_to '', new_video_path, class: 'btn btn-outline-success fa fa-plus', title: t('actions.new') %>